<Window x:Class="Osztalyzo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osztalyzo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" x:Name="StudentsStackpanel"></StackPanel>
        <StackPanel MinHeight="60">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Name" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"></TextBlock>
                <TextBox x:Name="NameTextBox" Grid.Column="1" FontSize="20" VerticalAlignment="Center" ></TextBox>
            </Grid>
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Grade" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"></TextBlock>
                <TextBox x:Name="GradeTextBox" Grid.Column="1" FontSize="20" VerticalAlignment="Center" ></TextBox>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" >
            <Button x:Name="AddStudentButton" Content="Add Student" Width="100" Height="30" Margin="10"/>
            <Button x:Name="SaveButton" Content="Save" Width="120" Height="30" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel x:Name="NamesStackPanel" Orientation="Horizontal">
                <TextBlock MinWidth="100" Text="name:" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"></TextBlock>
                <TextBlock MinWidth="100" Text="grades:" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"></TextBlock>
                <TextBlock HorizontalAlignment="Right" Margin="200,10,10,10" Text="Average:" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"></TextBlock>

            </StackPanel>
            <StackPanel x:Name="GradesStackPanel" Orientation="Vertical"></StackPanel>
        </StackPanel>
    </Grid>
</Window>
